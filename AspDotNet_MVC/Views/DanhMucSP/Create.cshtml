@model AspDotNet_MVC.Models.Entitis.DanhMucSanPham

@{
    ViewData["Title"] = "Tạo danh mục mới";
}

<h1 class="text-center">Quản Lý Danh Mục Sản Phẩm</h1>

<h4 class="text-center">Thêm mới danh mục sản phẩm ở phía dưới</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TenDM" class="control-label">Tên danh mục</label>
                    <input asp-for="TenDM" class="form-control" />
                    <span asp-validation-for="TenDM" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MoTa" class="control-label">Mô tả danh mục</label>
                    <input asp-for="MoTa" class="form-control" />
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group text-center">
                    <input type="submit" value="Tạo danh mục" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<div class="text-center">
    <a asp-action="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
